/*强制不换行*/
._wn {white-space: nowrap}
/*盒子*/
._df {display: flex}
._dif {display: inline-flex}
/*内联盒子*/
._dif {display: inline-flex}
/*垂直方向*/
._fdc {flex-direction: column}
/*盒子水平自动宽度*/
._flexXauto {
  max-width 100%
  overflow-x auto
  flex 1
}
/*盒子垂直自动高度*/
._flexYauto {
  max-height 100%
  overflow-y auto
  flex 1
}
/*平均分布*/
._js {justify-content: space-around}
/*内容垂直对齐*/
._ac {align-items: center}
/*内容水平对齐*/
._jc {justify-content: center}
/*子元素水平对齐*/
._m0a {margin: 0 auto}

/*内容垂直分布居中*/
._dfjcsb{
  display: -webkit-flex;
  display: flex;
  -webkit-justify-content: space-between;
  justify-content: space-between;
}

/*内容垂直对齐*/
._dfac{
  display: -webkit-flex;
  display: flex;
  align-items: center;
}

/*内容水平对齐*/
._dfjc{
  display: -webkit-flex;
  display: flex;
  -webkit-justify-content: center;
  justify-content: center;
}

/*垂直水平居中*/
._dfacjc{
  display: -webkit-flex;
  display: flex;
  align-items: center;
  -webkit-justify-content: center;
  justify-content: center;
}

/*垂直水平居中2*/
._dfacjcb{
  margin: auto
}

/*居底*/
._dfai{
  display: -webkit-flex;
  display: flex;
  -webkit-align-items: flex-end;
  align-items: flex-end;
}

/*超出隐藏*/
._oh{
  overflow: hidden;
}
/*去掉文字省略号*/
._noRowHide{
  display: inline-block;
  overflow: visible;
  white-space: normal;
  text-overflow: clip;
}
/*文字一行省略号*/
._ownRowHide{
  display: inline-block;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

