// 公共组件-容器
._content
  margin 0 auto
  min-width 320px
  max-width 540px
  background-color #fff

// 公共组件-空行空格
._framebox{
  height: 10px;
}
._framebox-20{
  height: 20px;
}
._framebox-30{
  height: 30px;
}

// 公共组件-按钮
._button {
  // border-color: #b2b2b2;
  border-color: #ddd;
  background-color: #f8f8f8;
  color: #444;
  position: relative;
  display: inline-block;
  margin: 0;
  padding: 0 12px;
  min-width: 22px;
  min-height: 42px;
  border-width: 1px;
  border-style: solid;
  // border-radius: 2px;
  vertical-align: top;
  text-align: center;
  text-overflow: ellipsis;
  cursor: pointer; 
  overflow: hidden;
}
  ._button:hover {
    color: #444;
    text-decoration: none; }
  ._button:active{
    border-color: #ccc;
    background-color: #fafafa;
    box-shadow: inset 0 1px 4px rgba(0, 0, 0, 0.1); }

._buttonB
	cursor pointer
	color #666
	user-select none
	transition background-color 150ms, color 300ms
	&:hover
		color #000
		background-color rgba(0,0,0,0.13) !important
	&:active
		color #fff
		transition color 50ms
	


// 公共UI组件 - 表格
._UI-table
  margin 10px 0 16px
  // width 900px
  &>:first-child
    padding-right 10px
    text-align right
  &>:last-child
    padding-left 10px
  h2
    // color #777
  .ui-t-note
    color #999
    font-size 12px
    margin 0
  .ui-t-noteB
    color #FF0000
    font-size 12px
    margin 0
  canvas
    margin 0 auto
    background-color #bbb
    border 1px solid #aaa
.ui-t_title
  margin-top 60px
  margin-bottom 30px
  div
    border-bottom: 3px solid #ddd
  &>:first-child
    border none
  &>:last-child
    border none
  &:first-child
    margin-top 0




// 公共UI组件 - 遮罩
._UI-mask
  position absolute
  width 100%
  height 100%
  display flex
  background-color rgba(0,0,0,0.3)
  z-index 10
  .ui-m-box
    margin auto
    padding 20px
    width 400px
    border-radius 10px
    background-color #fff
    box-shadow: 0 0 15px rgba(0,0,0,0.4)
    p
      margin 10px 0
      text-align center
    .anticon
      margin 20px auto
      display block
      font-size 24px
    .ant-btn
      margin 0 auto
      display block




/*清除浮动*/
._clear{clear:both; height: 0; line-height: 0; font-size: 0}

